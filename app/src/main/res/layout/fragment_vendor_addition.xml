<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ui.VendorAddition.VendorAdditionFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_box_border"
        android:elevation="4dp"
        tools:ignore="HardcodedText"
        android:layout_margin="@dimen/_10sdp">


        <ScrollView
            android:id="@+id/scroll_view_vendor_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toTopOf="@id/submit_add_vendor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <LinearLayout
                    android:id="@+id/va_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Name*"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_name_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_addr_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_addr_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Address"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_addr_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_land_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_land_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Landline"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_land_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_email_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Email"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_email_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/va_country_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_country_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Country "
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_country__value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_pan_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_pan_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Pan No. "
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_pan_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_payterm_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/va_payterm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Payment Terms"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <Spinner
                        android:id="@+id/va_payterm_value"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/paymentTerms"
                        android:gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_city_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="City"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_city_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_zip_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_zip_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Zip"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_zip_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/va_inventory_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/va_inventory_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Inventory"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <Spinner
                        android:id="@+id/va_inventory_value"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/inventory"
                        android:gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_regular_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/va_regular_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Regular Vendor"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <Spinner
                        android:id="@+id/va_regular_value"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:entries="@array/regVendor"
                        android:gravity="start" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_mobile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Mob No.*"
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_mobile_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/va_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/va_state_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="State "
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/va_state_value"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/va_gst_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/va_gst_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="GST No."
                        android:textColor="?colorOnBackground"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:id="@+id/va_gst_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="?colorOnSurface" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/submit_add_vendor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="Add Distributor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>