<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.mobilepos" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#303F9F</item>
        <item name="colorPrimarySurface">#3949AB</item>
        <item name="colorPrimaryVariant">#283593</item>
        <item name="colorPrimaryDark">#1A237E</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1E88E5</item>
        <item name="colorSecondaryVariant">#2196F3</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorOnBackground">#737373</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splashscreen</item>

    </style>
    <style name="Theme.mobilepos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.mobilepos.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.mobilepos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">?colorOnBackground</item>
    </style>
</resources>